  "schema": {
    "planningHorizonYears": {
      "type": "number",
      "min": 1,
      "max": 10,
      "description": "Length of the planning horizon in years."
    },
    "discountRateAnnual": {
      "type": "number",
      "min": 0.0,
      "max": 0.1,
      "description": "Annual discount rate applied to future flows."
    },
    "inrPerUsd": {
      "type": "number",
      "min": 60,
      "max": 100,
      "description": "Exchange rate used for display conversions."
    },
    "tier": {
      "type": "string",
      "enum": [
        "frontline",
        "intermediate",
        "advanced"
      ],
      "description": "FETP programme tier."
    }
