  "field_mappings": {
    "uiToConfig": {
      "graduationRate": "tiers[*].gradRate",
      "outbreaksPerCohortPerYear": "tiers[*].outbreaksPerCohortPerYear",
      "valuePerGraduate": "tiers[*].valuePerGraduate",
      "valuePerOutbreak": "tiers[*].valuePerOutbreak",
      "planningHorizonYears": "time_horizon.planning_years",
      "discountRateAnnual": "time_horizon.discount_rate_annual",
      "inrPerUsd": "currency.inr_per_usd_display"
    },
    "tierAliases": {
      "frontline": "frontline",
      "intermediate": "intermediate",
      "advanced": "advanced"
    }
  },

  "ui_layout": {
    "sections": [
      {
        "id": "epi_core",
        "label": "Epidemiological core parameters",
        "fields": [
          "graduationRate",
          "outbreaksPerCohortPerYear"
        ]
      },
      {
        "id": "monetary_values",
        "label": "Monetary benefit assumptions",
        "fields": [
          "valuePerGraduate",
          "valuePerOutbreak"
        ]
      },
      {
        "id": "time_currency",
        "label": "Time horizon and currency",
        "fields": [
          "planningHorizonYears",
          "discountRateAnnual",
          "inrPerUsd"
        ]
      }
    ],
    "scenarioSelector": {
      "enabled": true,
