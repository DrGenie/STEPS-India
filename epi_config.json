      "default_number_of_cohorts": 6,
      "notes": "Illustrative template for a multi cohort frontline roll out; cost details are defined in the costing configuration."
    },
    "who_intermediate_3_cohorts": {
      "label": "WHO style Intermediate programme (3 cohorts over horizon)",
      "default_tier": "intermediate",
      "default_number_of_cohorts": 3,
      "notes": "Illustrative template for intermediate FETP roll out."
    },
    "who_advanced_2_cohorts": {
      "label": "WHO style Advanced programme (2 cohorts over horizon)",
      "default_tier": "advanced",
      "default_number_of_cohorts": 2,
      "notes": "Illustrative template for advanced FETP roll out."
    }
  },
  "ui_locks": {
    "lockResponseTimeDays": 7,
    "showResponseTimeDropdown": true,
    "disabledResponseTimeOptionsDays": [
      15,
      30
    ],
