// epi_config.json
{
  "meta": {
    "name": "STEPS FETP India epidemiological configuration",
    "version": "1.5",
    "description": "Default multipliers and indicative monetary values for graduates and outbreak responses used by the STEPS decision aid.",
    "lastUpdated": "2025-12-12",
    "author": "Mesfin Genie and collaborators",
    "notes": "Version 1.5 locks the outbreak response time at 7 days for the core tool configuration while preserving the 15 and 30 day multipliers for sensitivity analysis and backwards compatibility with Versions 1.0 to 1.4.",
    "backwardsCompatibleWith": [
      "1.0",
      "1.1",
      "1.2",
      "1.3",
      "1.4"
    ],
    "intendedUse": "These parameters are used to translate configured programme scenarios into indicative monetary benefits per graduate and per outbreak response over a specified planning horizon.",
    "documentationUrl": "https://example.org/steps-fetp-india/technical-appendix",
    "configType": "epidemiological_and_monetary"
  },
  "general": {
    "planningHorizonYears": 5,
    "inrPerUsd": 83,
    "discountRateAnnual": 0.03,
    "applyDiscountingToOutbreakBenefits": false
  },
  "time_horizon": {
    "planning_years": 5,
    "discount_rate_annual": 0.03,
    "apply_discounting_to_outbreak_benefits": false
  },
  "currency": {
    "base_currency": "INR",
    "display_currency_options": [
      "INR",
      "USD"
    ],
    "inr_per_usd_display": 83,
    "default_display_currency": "INR"
  },
  "tiers": {
    "frontline": {
      "label": "Frontline",
      "durationMonths": 3,
      "gradRate": 0.9,
      "gradShare": 0.9,
      "outbreaksPerCohortPerYear": 0.3,
      "valuePerGraduate": 0,
      "valuePerOutbreak": 20000000000
    },
    "intermediate": {
      "label": "Intermediate",
      "durationMonths": 12,
      "gradRate": 0.9,
      "gradShare": 0.9,
      "outbreaksPerCohortPerYear": 0.5,
      "valuePerGraduate": 0,
      "valuePerOutbreak": 20000000000
    },
    "advanced": {
      "label": "Advanced",
      "durationMonths": 24,
      "gradRate": 0.95,
      "gradShare": 0.95,
      "outbreaksPerCohortPerYear": 0.8,
      "valuePerGraduate": 0,
      "valuePerOutbreak": 20000000000
    }
  },
  "response_time_settings": {
    "unit": "days_from_detection_to_response",
    "base_response_time_days": 7,
    "min_response_time_days": 7,
    "max_response_time_days": 7,
    "notes": "Core tool configuration locks outbreak response time at 7 days. Multipliers for 15 and 30 days are retained for sensitivity analysis displays and backwards compatibility."
  },
  "response_time_multipliers": {
    "30": 1.0,
    "15": 1.2,
    "7": 1.5
