  "ui": {
    "graduationRate": {
      "min": 0.6,
      "max": 1.0,
      "step": 0.01,
      "label": "Graduation rate (share of trainees graduating)",
      "unit": "share",
      "decimals": 2,
      "rangeKey": "graduates_per_cohort_share",
